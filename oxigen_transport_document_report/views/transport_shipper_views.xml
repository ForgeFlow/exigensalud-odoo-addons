<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_transport_shipper_filter" model="ir.ui.view">
        <field name="name">transport.shipper.filter</field>
        <field name="model">transport.shipper</field>
        <field name="arch" type="xml">
            <search string="Transport Shipper">
                <field name="name" />
                <field name="full_name" />
                <field name="identification_id" />
                <filter
                    string="Filled"
                    name="has_partner"
                    domain="[('has_partner','=',True)]"
                />
                <group expand="0" string="Group By">
                    <filter
                        string="Transport Company"
                        name="groupby_transport_company_id"
                        domain="[]"
                        context="{'group_by': 'transport_company_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="view_transport_shipper_tree">
        <field name="name">Transport Shippers</field>
        <field name="model">transport.shipper</field>
        <field name="arch" type="xml">
            <tree string="Transport Shippers">
                <field name="name" />
                <field name="full_name" />
                <field name="partner_id" invisible="1" />
                <field name="transport_company_id" />
                <field name="identification_id" optional="show" readonly="1" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="hide"
                />
            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_transport_shipper_form">
        <field name="name">Transport Shipper</field>
        <field name="model">transport.shipper</field>
        <field name="arch" type="xml">
            <form string="Transport Shipper">
                <sheet>
                    <field
                        name="image_1920"
                        widget='image'
                        class="oe_avatar"
                        nolabel="1"
                        readonly="1"
                        attrs="{'invisible': [('partner_id','=', False)]}"
                    />
                    <div class="oe_title">
                        <h1>
                            <field name="name" width="200" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field
                                name="partner_id"
                                context="{'show_address': 1, 'show_vat': True}"
                                options='{"no_quick_create": True}'
                            />
                            <field name="has_partner" invisible="1" />
                            <field name="user_ids" invisible="1" />
                            <field
                                name="user_id"
                                domain="[('partner_id', '=', partner_id)]"
                                attrs="{'invisible': ['|', ('partner_id','=', False), ('user_ids','=', False)]}"
                                options="{'no_create': True}"
                            />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field
                                name="full_name"
                                attrs="{'invisible': [('name','=', False)]}"
                            />
                            <field name="identification_id" />
                            <field name="company_id" invisible="1" />
                        </group>
                        <group>
                            <field
                                name="transport_company_id"
                                widget="res_partner_many2one"
                                context="{'show_address': 1, 'show_vat': True}"
                                options='{"always_reload": True, "no_quick_create": True}'
                            />
                        </group>
                    </group>
                    <!--<group attrs="{'invisible': [('partner_id','=', False)]}">
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="city" placeholder="City" class="o_address_city"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_open': True, 'no_quick_create': True}" context="{'default_country_id': country_id}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                            </div>
                            <field name="website" widget="url" placeholder="e.g. https://www.odoo.com"/>
                        </group>
                    </group>-->
                </sheet>
            </form>
        </field>
    </record>

    <record id="transport_shipper_action" model="ir.actions.act_window">
        <field name="name">Transport Shippers</field>
        <field name="res_model">transport.shipper</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No transport shipper found. Let's create one!
            </p>
        </field>

    </record>

    <menuitem
        action="transport_shipper_action"
        id="transport_shipper_menu"
        parent="menu_transport_config"
        sequence="9"
        name="Transport Shippers"
    />

</odoo>
