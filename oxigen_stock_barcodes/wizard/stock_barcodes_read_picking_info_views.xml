<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_stock_barcodes_read_picking_form" model="ir.ui.view">
        <field
            name="name"
        >stock.barcodes.read.picking.form - oxigen_stock_barcodes</field>
        <field name="model">wiz.stock.barcodes.read.picking</field>
        <field
            name="inherit_id"
            ref="stock_barcodes.view_stock_barcodes_read_picking_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='candidate_picking_ids']" position="inside">
                <field
                    name="candidate_picking_ids"
                    mode="kanban"
                    attrs="{'invisible': [('candidate_picking_ids', '=', [])]}"
                    nolabel="1"
                >
                    <field name="next_product_id" />
                    <field name="next_location_dest_id" />
                    <field name="next_location_source_id" />
                    <field name="next_product_uom_qty" />
                    <field name="product_done_qty" />
                </field>
            </xpath>
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="inside">
                <div>
                    <strong>Next remaining line:</strong>
                    <br />
                    <label for="next_product_id">Product: </label>
                    <field name="next_product_id" />
                    <label for="next_product_uom_qty">Demand: </label>
                    <field name="next_product_uom_qty" />
                    <label for="product_done_qty">Done: </label>
                    <field name="product_done_qty" />
                    <br />
                    <label for="next_location_source_id">From: </label>
                    <field name="next_location_source_id" />
                    <label for="next_location_dest_id">To: </label>
                    <field name="next_location_dest_id" />
                </div>
            </xpath>
        </field>
    </record>
</odoo>
